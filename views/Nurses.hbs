{{!-- Page name --}}
<h1>Nurses</h1>

{{!-- Create a table --}}
<table id="nurses-table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>License Number</th>
            <th>License Expiration</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.nurseFName}}</td>
            <td>{{this.nurseLName}}</td>
            <td>{{this.licenseNumber}}</td>
            <td>{{formatDate this.licenseExpiration}}</td>
            <td><button onclick="deleteNurse({{this.nurseID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table --}}
<h2>Add a Nurse</h2>
<p>To add a new nurse, please enter their information below and click 'Submit'.</p>
<form id="add-nurse-form" method="POST" action="/">
    <div class="group">
        <label for="input-fname">First Name: </label>
        <input type="text" name="fname" id="input-fname">
    </div>
    <div class="group">
        <label for="input-lname">Last Name: </label>
        <input type="text" name="lname" id="input-lname">
    </div>
    <div class="group">
        <label for="input-licnum">License Number: </label>
        <input type="text" name="licnum" id="input-licnum">
    </div>
    <div class="group">
        <label for="input-licexp">License Expiration: </label>
        <input type="date" name="licexp" id="input-licexp">
    </div>
    <input type="submit">
</form>

{{!-- Form to update a record in the table --}}
<h2>Update a Nurse's License</h2>
<p>To update a nurse's license information select their name from the drop down menu, enter the new information, and click 'Submit'.</p>
<form id="update-nurse-form-ajax">
    <div class="group">
        <label for="select_fname">Full name: </label>
        <select name="fname" id="select_fname">
            <option value="test">Select a Nurse</option>
            {{#each data}}
            <option value="{{this.nurseID}}">{{this.nurseFName}} {{this.nurseLName}}</option>
            {{/each}}
        </select>
    </div>
    <div class="group">
        <label for="input-licnum">License Number: </label>
        <input type="text" name="licnum" id="input-licnum">
    </div>
    <div class="group">
        <label for="input-licexp">License Expiration: </label>
        <input type="date" name="licexp" id="input-licexp">
    </div>
    <input type="submit">
</form>

{{!-- Scripts --}}
<script src="./js/update_nurse.js"></script>
<script src="./js/delete_nurse.js"></script>
